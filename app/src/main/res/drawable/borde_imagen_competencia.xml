<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">
            <padding
                android:bottom="0.5dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />
            <corners android:radius="12dp" />

            <gradient
                android:angle="360"
                android:endColor="@color/naranjaClase"
                android:startColor="@color/moradoTrasfondo"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/fondoTarjeta" />
        </shape>
    </item>

</layer-list>